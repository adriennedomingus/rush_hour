  <h4>Total hits: <%= event.by_hour.values.reduce(:+) %></h4>
  <h4>Hits by Hour</h4>
  <% event.by_hour.each do |hour, hits| %>
   <p><%= "Hour #{hour}: #{hits} #{singluar_or_plural_hits(hits)}" %></p>
  <% end %>
