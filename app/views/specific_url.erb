<div class="container">
  <h1>Url Stats</h1>
  <p>Maximum Response Time: <%= url.max_response_time(client) %></p>
  <p>Minimum Response Time: <%= url.min_response_time(client) %></p>
  <%= erb :_url_response_times, locals: { url: url } %>
  <p>Average Response Time: <%= url.avg_response_time(client) %></p>
  <%= erb :_url_verbs_used, locals: { url: url } %>
  <%= erb :_url_most_popular_referrers, locals: { url: url } %>
  <%= erb :_url_most_popular_user_agents, locals: { url: url } %>
  <h2><%= link_to_main_statistics(client) %></h2>
</div>
